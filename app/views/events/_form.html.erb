<div class="event-form-container">
  <%= form_with(model: @event, local: true, class: 'event-form') do |form| %>
    <div class="field">
      <%= form.label :name, class: 'label' %>
      <%= form.text_field :name, class: 'input' %>
    </div>

    <div class="field">
      <%= form.label :date, class: 'label' %>
      <%= form.date_field :date, class: 'input' %>
    </div>

    <div class="field">
      <%= form.label :location, class: 'label' %>
      <%= form.text_field :location, class: 'input' %>
    </div>

    <div class="field">
      <%= form.label :description, class: 'label' %>
      <%= form.text_area :description, rows: 4, class: 'textarea' %>
    </div>

    <div class="actions">
      <%= form.submit 'Save Event', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

