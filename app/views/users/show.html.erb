<h1>User <%= "#{@user.first_name} #{@user.last_name}" %></h1>

<h3>Email: <%= @user.email %></h3>

<h2>Events</h2>
<% if @events.any? %>
  <ul>
    <% @events.each do |event| %>
      <li><%= link_to event.name, event_path(event) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No events found for this user.</p>
<% end %>

<h2>Events <%= @user.first_name %> is attending</h2>
    <ul>
      <% @user.attended_events.each do |event| %>
        <li><%= link_to event.name, event_path(event) %></li>
      <% end %>
    </ul>